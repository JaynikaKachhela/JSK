@model IEnumerable<JobPortal.Models.Job>

@{
    ViewBag.Title = "List";
}

<h4> ... Jobs ... </h4>
<h2>List</h2>
<div>
<table border="1" cellspacing="3" cellpadding="2">
   
    <tr>
        <th>
             @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfPositions)
        </th>
        <th>
            @Html.Label("Action");
        </th>
    </tr>
    @foreach (var item in Model)
    { 
        <tr>
            <td>
                @Html.DisplayFor(modeItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.NoOfPositions)
            </td>
            <td>
                @Html.ActionLink("Apply", "Add", "Applicant")   
                @Html.ActionLink("View", "Detail", new { id = item.JobId })
                
            </td>
        </tr>
    }
</table>
</div>